
.modal
  
  background-color: white;
  z-index: 100;
  position: absolute;
  
  a
    color: #444;
    text-decoration: underline;

  code, pre
    font-family: Consolas, Courier, monospace;
    font-size: 12px;
    display: block;
    white-space: pre;
    margin: 1em 0px;
    box-sizing: border-box;
    padding: 10px;
    background-color: #eee;
    border-radius: 3px;
    line-height: 1.4em;
  
  p
    line-height: 1.2em;
  
  h1
    font-weight: 200;
    font-size: 30px;
    color: #c00;
    padding: 0 0 20px 0;

  h2
    font-weight: 200;
    text-transform: uppercase;
    color: #444;
    padding: 20px 0 0 0;
  
  .content
    overflow: auto;
    margin: 30px;
  
  .closemodal
    text-indent: 100%;
    white-space: nowrap;
    overflow: hidden;
    background: url(/assets/img/app/components/modal/closemodal.svg) no-repeat 0 0;
    background-size: 14px;
    width: 14px;
    height: 14px;
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 3;
    
  .helpertext
    font-size: 12px;
    color: #888;
  
  .footnote
    margin-top: 20px;
  
  .error
    color: #cc0000;
  
  .field
    border: 0;
    background: #efefef;
    width: 97%;
    padding: 8px;
    border-radius: 3px;
    font-size: 16px;
    font-family: "Source Sans Pro", sans-serif;
    margin: 5px 0 8px 0;
  
  .button
    background: #000;
    font-family: "Source Sans Pro", sans-serif;
    color: #fff;
    border-radius: 3px;

  .button:hover
    background: #c00;

.modal-overlay
  background-color: black;
  opacity: 0.2;
